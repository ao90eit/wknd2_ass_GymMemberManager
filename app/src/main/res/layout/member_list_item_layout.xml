<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/member_listView_photo_imageView"
            android:layout_width="0dp"
            android:layout_height="112dp"
            tools:src="@drawable/profile_pic_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".3"
            />

        <TextView
            android:id="@+id/member_listView_name_imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Amanda Grayson"
            app:layout_constraintStart_toEndOf="@id/member_listView_photo_imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent=".6"
            android:textAlignment="center"
            android:textSize="24sp"

            />

        <ImageView
            android:id="@+id/member_listView_member_level_imageView"
            android:layout_width="0dp"
            android:layout_height="64dp"
            tools:src="@drawable/ic_laurel_gold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent=".1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>